<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_to_do_card_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#cccccccc"
    tools:context="com.example.mtndew3.ToDoCardCreate">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/create_text"
            android:layout_below="@+id/create_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:background="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE?"
        android:id="@+id/save_button1"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <CheckBox
        android:text="completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/is_it_complete_button"
        android:focusable="false"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/create_text"
        android:layout_alignStart="@+id/create_category" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_title"
        android:background="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/create_category"
        android:background="#ffffff"
        android:text="category"
        android:layout_marginStart="48dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/is_it_complete_button"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/create_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="date due"
        android:layout_marginStart="14dp"
        android:layout_above="@+id/save_button1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />


</RelativeLayout>