<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_to_do_card_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#cccccccc"
    tools:context="com.example.mtndew3.ToDoCardCreate">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/card_text"
            android:layout_below="@+id/card_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:background="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save?"
        android:id="@+id/save_button1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/due_month"
        android:text="mm"
        android:background="#ffffff"
        android:inputType="datetime"
        android:maxLength="2"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:layout_alignBaseline="@+id/is_complete"
        android:layout_alignBottom="@+id/is_complete"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/due_hour"
        android:text="24"
        android:background="#ffffff"
        android:inputType="datetime"
        android:maxLength="2"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/is_complete" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/card_category"
        android:background="#ffffff"
        android:layout_below="@+id/due_hour"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: "
        android:layout_alignBottom="@+id/card_category"
        android:layout_toStartOf="@+id/card_category"
        android:layout_marginEnd="12dp" />

    <CheckBox
        android:text="completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/is_complete"
        android:onClick="isComplete"
        android:focusable="false"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/card_text"
        android:layout_alignStart="@+id/card_category" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/due_date"
        android:text="yyyy"
        android:background="#ffffff"
        android:inputType="datetime"
        android:maxLength="4"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:layout_toEndOf="@+id/due_day"
        android:layout_alignTop="@+id/due_day"
        android:layout_alignBottom="@+id/due_day" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/due_minute"
        android:text="59"
        android:background="#ffffff"
        android:inputType="datetime"
        android:maxLength="2"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:layout_alignStart="@+id/due_day"
        android:layout_toStartOf="@+id/due_year"
        android:layout_alignTop="@+id/due_hour" />

    <EditText
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/due_day"
        android:text="dd"
        android:background="#ffffff"
        android:inputType="datetime"
        android:maxLength="2"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/due_month"
        android:layout_alignBottom="@+id/due_month"
        android:layout_toEndOf="@+id/due_month" />
</RelativeLayout>